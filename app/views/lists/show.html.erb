<h1><%= @list.name %></h1>

    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= %>')">
          <%= movie.title %>
          <%= movie.rating %>
          <%= movie.overview %>
        </div>
      </div>
    <% end %>

<%= link_to "<< Back to lists", lists_path %> || <%= link_to "Delete this list", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
